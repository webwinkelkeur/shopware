#!/bin/bash

set -euo pipefail
cd "$(dirname "$0")/.."

if [[ $# -ne 1 ]]; then
	echo "Usage: $0 <PROJECT>" >&2
	exit 1
fi

project="$1"

version="1.0.0"
zip="dist/$project-shopware-$version.zip"
zip_abs="$PWD/$zip"

tmp="$(mktemp -d)"
cleanup() { rm -rf "$tmp"; }
trap cleanup EXIT

git archive HEAD --  | tar x -C "$tmp"

$tmp/bin/prepare $project

composer="$tmp/$project/composer.json"
jq --arg v "$version" '.version = $v' "$composer" > "$composer~"
mv "$composer~" "$composer"

mkdir -p "$(dirname "$zip")"
cd "$tmp"
zip -r9 "$zip_abs" $project >&2

echo "$zip"
